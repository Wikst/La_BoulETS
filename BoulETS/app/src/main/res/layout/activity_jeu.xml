<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titreJeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginLeft="252dp"
        android:layout_marginTop="5dp"
        android:text="FenÃªtre de jeu"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/chrono"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_marginStart="244dp"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="28dp"
        android:max="100"
        android:progress="100"
        android:rotation="-90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreJeu" />

    <TextView
        android:id="@+id/temps"
        android:layout_width="283dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="00:00:30"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/chrono"
        app:layout_constraintTop_toBottomOf="@+id/titreJeu" />

    <TextView
        android:id="@+id/mot"
        android:layout_width="492dp"
        android:layout_height="99dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Geralt of Rivia"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreJeu" />

    <TextView
        android:id="@+id/goodNext"
        android:layout_width="92dp"
        android:layout_height="100dp"
        android:layout_marginTop="108dp"
        android:background="#4CAF50"
        android:text=">>"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/mot"
        app:layout_constraintTop_toBottomOf="@+id/titreJeu" />

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginLeft="328dp"
        android:layout_marginTop="4dp"
        android:background="#FF9800"
        android:rotation="90"
        android:text=">>"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mot" />


</androidx.constraintlayout.widget.ConstraintLayout>