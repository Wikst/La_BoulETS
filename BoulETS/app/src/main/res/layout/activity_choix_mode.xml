<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="32dp"
        android:text="Choix du Mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/partieRapide"
        android:layout_width="273dp"
        android:layout_height="63dp"
        android:layout_marginStart="226dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="35dp"
        android:text="Partie Rapide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="228dp"
        android:layout_height="27dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:max="5"
        android:min="2"
        android:progress="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NbMots" />

    <Button
        android:id="@+id/partiePerso"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_marginStart="225dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="38dp"
        android:text="Partie personnalisÃ©e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partieRapide" />

    <TextView
        android:id="@+id/nbMots"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/NbMots"
        app:layout_constraintTop_toBottomOf="@+id/partiePerso" />

    <TextView
        android:id="@+id/NbMots"
        android:layout_width="182dp"
        android:layout_height="21dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:text="Nombre de mots par joueur:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partiePerso"
        tools:text="Nombre de mots par joueur:" />


</androidx.constraintlayout.widget.ConstraintLayout>